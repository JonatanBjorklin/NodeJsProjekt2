      <% for(var i = 0; i < data.length; i++) { %>
    <p><%= data[i].id %></p>
    <p><%= data[i].email %></p>
    <p><%= data[i].phone %></p>
    <% if(data[i].img != null){ %>
        <img src="uploads/<%= data[i].img %>" alt="No img">
    <% }; %>
    <button>
        <a href="./card<%= data[i].id %>">Edit Card</a>
    </button>
    <% }; %>
</body>
